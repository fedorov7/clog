{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "debug": {
        "output": true
      },
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/deploy/${presetName}"
      }
    },
    {
      "name": "linux-debug",
      "inherits": "default",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "inherits": "default",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows",
      "inherits": "default",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x64",
          "hostOS": ["Windows"]
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug",
      "targets": "install",
      "configurePreset": "linux-debug"
    },
    {
      "name": "linux-release",
      "targets": "install",
      "configurePreset": "linux-release"
    },
    {
      "name": "windows-debug",
      "configurePreset": "windows",
      "targets": "install",
      "configuration": "Debug"
    },
    {
      "name": "windows-release",
      "configurePreset": "windows",
      "targets": "install",
      "configuration": "Release"
    }
  ]
}
